
<h2>New User Registration</h2>

<%= form_with url: users_path, method: :post, local: true do |form| %>
  <p><%= form.label :name %>
  <%= form.text_field :name %></p>
  <p><%= form.label :email %>
  <%= form.text_field :email %></p>
  <p><%= form.label :password %>
  <%= form.number_field :password %></p>
  <p><%= form.label :password_confirmation %>
  <%= form.number_field :password_confirmation %></p>
  <%= form.submit %>
<% end %>